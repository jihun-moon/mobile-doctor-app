<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 버튼 기본 모양 -->
    <style name="MDButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 제목 텍스트 -->
    <style name="MDTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 본문 텍스트 -->
    <style name="MDBody" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 풀스크린 전용 테마 (AppCompat 계열) -->
    <style name="Theme.MobileDoctor.Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 전체화면 모드 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 상태바, 네비게이션 바 색상은 기기 기본 사용 -->
    </style>

</resources>
