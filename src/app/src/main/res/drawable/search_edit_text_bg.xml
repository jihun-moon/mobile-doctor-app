<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 배경색 -->
    <solid android:color="@android:color/white"/>
    <!-- 모서리 둥글게 -->
    <corners android:radius="4dp"/>
    <!-- 테두리 -->
    <stroke
        android:width="1dp"
        android:color="#03DAC5"/>

    <!-- 내부 여백 -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp"/>
</shape>
