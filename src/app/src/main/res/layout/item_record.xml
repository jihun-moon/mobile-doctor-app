<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 상단: 이용일자 & 비용 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_visit_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2025-05-28"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₩6,900"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700" />
        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@color/gray_light" />

        <!-- 병명 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/tv_label_diagnosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="병명"
                android:textStyle="bold"
                android:textColor="@color/gray_dark" />

            <TextView
                android:id="@+id/tv_diagnosis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="위통" />
        </LinearLayout>

        <!-- 증상 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/tv_label_symptom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="증상"
                android:textStyle="bold"
                android:textColor="@color/gray_dark" />

            <TextView
                android:id="@+id/tv_symptom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="위통" />
        </LinearLayout>

        <!-- 복용약 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/tv_label_medication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="복용약"
                android:textStyle="bold"
                android:textColor="@color/gray_dark" />

            <TextView
                android:id="@+id/tv_medication"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="위장약" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
